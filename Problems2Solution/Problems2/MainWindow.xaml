<Window x:Class="Problems2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problems2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtPokemon" HorizontalAlignment="Left" Height="24" Margin="195,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="310,95,0,0" VerticalAlignment="Top" Width="140" Height="60" Click="BtnSubmit_Click"/>
        <Label x:Name="lblEnterPokemon" Content="Please Enter Pokemon" HorizontalAlignment="Left" Margin="195,10,0,0" VerticalAlignment="Top" Width="355"/>
        <Label x:Name="lblListBox" Content="Pokemon Abilities" HorizontalAlignment="Left" Margin="195,180,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="134" Margin="195,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>

    </Grid>
</Window>
